INPUTRC=${XDG_CONFIG_HOME:$HOME/.config}/inputrc

_set_term_title() {
    printf "\033]0;bash %s\a" "$*"
}

_set_term_title_cwd() {
    _set_term_title "${PWD/$HOME/\~}"
}

# Update the terminal title to show the current directory.
PROMPT_COMMAND=_set_term_title_cwd${PROMPT_COMMAND:+;$PROMPT_COMMAND}

# Update LINES and COLUMNS after each command.
shopt -s checkwinsize

# vi:ft=bash

#!/usr/bin/env bash

set -euo pipefail

usage="Rename files using your preferred editor.

Usage:
    ${0##*/} [OPTIONS] FILE...

Options:
    -f    use -f instead of -i for generated mv commands"

mkbr_options=()

while getopts ":fh" option; do
    case $option in
    f) mkbr_options+=(-f) ;;
    h)
        printf "%s\n" "$usage"
        exit 0
        ;;
    *)
        printf "Invalid option: %s\n" "$OPTARG" >&2
        exit 1
        ;;
    esac
done && shift $((OPTIND - 1))

temp_dir=$(mktemp -d -t "${0##*/}".XXXXXXXXXX)
printf -v cleanup "rm -r %q" "$temp_dir"
trap '$cleanup' EXIT

src_list=$temp_dir/src
dst_list=$temp_dir/dst

if (($# == 0)); then
    cat >"$src_list"
else
    for path in "$@"; do
        if [[ $path == *$'\n'* ]]; then
            printf "Invalid path: %q (contains newline)\n" "$path" >&2
            exit 1
        fi
    done
    printf "%s\n" "$@" >"$src_list"
fi

cp "$src_list" "$dst_list"

${EDITOR:-vim} "$dst_list"

mkbr "${mkbr_options[@]}" "$src_list" "$dst_list"

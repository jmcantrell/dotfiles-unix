#!/usr/bin/env bash

# Show a 16x16 grid of foreground/background color combinations.

set -eu

sample=${1:-0}
width=${#sample}
min_width=2
((width < min_width)) && width=$min_width

reset=$(tput sgr0)

declare -a fg bg
for n in {0..15}; do
    fg+=("$(tput setaf "$n")")
    bg+=("$(tput setab "$n")")
done

# header
printf " %*s " $min_width " "
for bgn in {0..15}; do
    printf " %*s " "$width" "$bgn"
done
printf "\n"

# rows = fg, columns = bg
for fgn in {0..15}; do
    printf " %*s" "$min_width" "$fgn"
    for bgn in {0..15}; do
        printf " %s %-*s" "${fg[$fgn]}${bg[$bgn]}" $width "$sample"
    done
    printf "%s\n" "$reset"
done

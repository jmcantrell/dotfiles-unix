#!/usr/bin/env bash

set -eu

dir=${LUAENV_ROOT:-$HOME/.luaenv}

if [[ -d $dir ]]; then
    cd "$dir"
    git pull origin master
else
    git clone https://github.com/cehoffman/luaenv.git "$dir"
    cd "$dir"
fi

add_plugin() {
    local name=$1
    local url=$2

    plugin_dir=$dir/plugins/$name

    if [[ -d $plugin_dir ]]; then
        cd "$plugin_dir"
        git pull origin master
    else
        git clone "$url" "$plugin_dir"
    fi
}

add_plugin lua-build https://github.com/cehoffman/lua-build.git
add_plugin luaenv-luarocks https://github.com/jmcantrell/luaenv-luarocks.git
add_plugin luaenv-default-rocks https://github.com/jmcantrell/luaenv-default-rocks.git
add_plugin xxenv-latest https://github.com/momo-lab/xxenv-latest.git

export PATH=$dir/bin:$dir/shims:$PATH

luaenv latest install --skip-existing

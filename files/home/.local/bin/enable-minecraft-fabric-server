#!/usr/bin/env bash

# Initialize a Fabric-enabled Mincraft server for the given version.
# Usage: enable-minecraft-fabric-server [VERSION]

set -euo pipefail

version_file=$(mktemp -t "${0##*/}".XXXXXXXXXX)
printf -v cleanup "rm %q" "$version_file"
trap '$cleanup' EXIT

curl -sSL -o "$version_file" https://launchermeta.mojang.com/mc/game/version_manifest.json

version=${1:-$(jq -er .latest.release "$version_file")}

if ! jq -er --arg version "$version" '.versions[] | select(.id == $version)' "$version_file" >/dev/null; then
    printf "Invalid version: %s\n" "$version" >&2
    exit 1
fi

prefix=${XDG_DATA_HOME:-$HOME/.local/share}/mincraft-fabric-server/$version

if [[ -d $prefix ]]; then
    exit 0
fi

mkdir -p "$prefix"
cd "$prefix"

installer_url=$(curl -sSL https://meta.fabricmc.net/v2/versions/installer | jq -er .[0].url)

printf "Downloading Fabric installer\n"
curl -L -o installer.jar "$installer_url"

java -jar installer.jar server -mcversion "$version" -downloadMinecraft

mv server.jar vanilla.jar
ln -vsfn fabric-server-launch.jar server.jar
printf "serverJar=vanilla.jar\n" >fabric-server-launcher.properties
printf "eula=true\n" >eula.txt

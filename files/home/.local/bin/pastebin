#!/usr/bin/env bash

# Paste lines to a shareable URL.
# Usage: pastebin /path/to/file
#        command | pastebin

set -euo pipefail

file=${1:-/dev/stdin}

url=$(curl -sSL --data-binary @"$file" https://paste.rs)

if [[ ! -v ext ]]; then
    ext=${file##*/}
    ext=${ext##*.}
fi

printf "%s%s\n" "$url" "${ext:+.$ext}"

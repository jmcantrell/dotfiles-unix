#!/usr/bin/env bash

# Post files/urls to a shareable URL.
# Usage: postbin ITEM...

set -euo pipefail

for src in "$@"; do
    if [[ $src == *://* ]]; then
        action="url"
        target=$src
    else
        action="file"
        target=@$src
    fi

    curl -F "$action=$target" https://0x0.st
done

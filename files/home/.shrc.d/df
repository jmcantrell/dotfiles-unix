# Use POSIX output and include file system type.
alias df='df --portability --print-type'

# Display human-readable sizes.
alias dfh='df --si'

# Display various size units.
alias dfb='df --block-size=1'  # bytes
alias dfk='df --block-size=1K' # kilobytes
alias dfm='df --block-size=1M' # megabytes
alias dfg='df --block-size=1G' # gigabytes

# vi:ft=sh

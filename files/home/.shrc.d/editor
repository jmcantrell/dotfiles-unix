alias e=editor

# Edit files with elevated privileges.
alias E=sudoedit

# Edit files piped to stdin.
alias ein=editor-stdin

# Edit program(s) in $PATH.
ew() {
    command -v "$@" 2>/dev/null | editor-stdin
}

# Edit locate results.
el() {
    locate "$@" 2>/dev/null | editor-stdin
}

# Edit the stdout of a command.
ex() {
    "$@" | editor -
}

# Edit both stdout and stderr of a command.
eX() {
    "$@" 2>&1 | editor -
}

# vi:ft=sh

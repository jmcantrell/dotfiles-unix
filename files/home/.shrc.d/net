# Serve the current directory over http.
httpd() {
    local port=${1:-8080}
    local cmd=(python -m http.server "$port")
    if ((port < 1024)); then
        sudo "${cmd[@]}"
    else
        "${cmd[@]}"
    fi
}

# Listen and display email being relayed through localhost.
smtpd() {
    local port=${1:-8025}
    local cmd=(python -m smtpd -n -d -c DebuggingServer localhost:"$port")
    if ((port < 1024)); then
        sudo "${cmd[@]}"
    else
        "${cmd[@]}"
    fi
}


# Show all terminal-associated processes by default.
alias ps='ps -a'

# Show all processes for every user.
alias pa='ps -eo "pid,%cpu,%mem,size,tty,stat,user,command"'

# Show all processes owned by a user (default: this user).
pu() {
    ps -u "${1:-$USER}" -o "pid,%cpu,%mem,size,tty,stat,command"
}

# vi:ft=sh

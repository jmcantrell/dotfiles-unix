alias tx=transmission-remote

# List IDs of the finished torrents.
tx_done_ids() {
    tx -l |
        awk '{print $1,$2}' |
        tail -n+2 | head -n-1 |
        grep '\b100%\b' |
        awk '{print $1}'
}

# Remove finished downloads.
alias txc='tx -t "$(tx_done_ids | paste -sd,)" -r'

# List active downloads.
alias txl='tx -l | grep -vi queued'

# List all downloads.
alias txla='tx -l'

# vi:ft=sh

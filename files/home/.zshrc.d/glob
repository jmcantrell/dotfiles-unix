# Recognize additional characters for filename generation (#, ~, ^).
setopt extended_glob

# Expand character classes.
setopt brace_ccl

# Delete pattern if no matches, but report error if all matches were null.
setopt csh_null_glob

# If filenames are numeric, sort numerically.
setopt numeric_glob_sort

# Prompt for `rm *`.
setopt no_rm_star_silent

# Allow `**.foo` as a shortened form of `**/*.foo`.
setopt glob_star_short

# vi:ft=zsh

export HISTFILE=$HOME/.zsh_history
export HISTSIZE=15000
export SAVEHIST=10000

# Don't beep if trying to access a non-existent history entry.
setopt no_hist_beep

# Add to the history file as commands are entered.
setopt inc_append_history

# Only add unique history entries.
setopt hist_ignore_dups

# Move duplicate history entries to the end.
setopt hist_ignore_all_dups

# When searching, don't display duplicate history entries.
setopt hist_find_no_dups

# Lose duplicate history entries before unique ones when trimming.
setopt hist_expire_dups_first

# Don't remember commands that start with a space.
setopt hist_ignore_space

# Don't remember function definitions.
setopt hist_no_functions

# Remove superfluous blanks from history entries.
setopt hist_reduce_blanks

# vi:ft=zsh

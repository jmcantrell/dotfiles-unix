# Adjust word splitting characters.
WORDCHARS=${WORDCHARS:s#/#}
WORDCHARS=${WORDCHARS:s/_/}

# Mark each prompt so they can be identified in the scrollback.
_mark_prompt() {
    print -Pn "\e]133;A\e\\"
}
precmd_functions+=_mark_prompt

# Set the terminal title.
_set_title() {
    print -Pn "\e]2;zsh %y %~ ${(V)1//\%/\%\%}\a"
}
precmd_functions+=_set_title  # before each prompt
preexec_functions+=_set_title # before command executes

# Don't beep on errors.
setopt no_beep

# Allow comments in interactive shells.
setopt interactive_comments

# Allow unicode combining characters to be typed.
setopt combiningchars

# vi:ft=zsh

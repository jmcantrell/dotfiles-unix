#!/usr/bin/env bash

# Show disk usage sorted by file size (descending).

set -eu

find "$@" -mindepth 1 -maxdepth 1 -exec du -sb {} \; | # prepend byte size
    sort --numeric-sort --reverse |                    # sort descending
    awk -F'\t' '{print $2}' |                          # remove byte size
    xargs --no-run-if-empty -I{} du -s --si {}         # make human-readable

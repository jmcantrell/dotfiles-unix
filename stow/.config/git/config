[core]
    excludesFile = ~/.config/git/ignore

[include]
    path = ~/.config/git/secret

[init]
    defaultBranch = master

[color]
    ui = auto
    branch = auto
    diff = auto
    interactive = auto
    status = auto

[pull]
    rebase = false

[push]
    default = current

[branch]
    autoSetupMerge = true

[diff]
    mnemonicPrefix = true
    submodule = log
    colorMoved = default

[difftool]
    prompt = false

[merge]
    tool = vimdiff

[mergetool]
    prompt = false

[pager]
    diff = delta
    log = delta
    reflog = delta
    show = delta

[interactive]
    diffFilter = delta --color-only

[web]
    browser = browser

[alias]
    ls = ls-files
    fix = mergetool
    amend = commit --amend

[advice]
    detachedHead = false

[delta]
    features = line-numbers decorations navigate

[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

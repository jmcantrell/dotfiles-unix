#!/usr/bin/env bash

set -e

me=${0##*/}
usage="Rename files using your preferred editor.

Usage: $me [-h] [-n] FILE...

Options:
    -h    show this help message
    -n    show the renamed files without actually renaming them
"

usage() {
    echo "$usage" >&2
    exit 0
}

die() {
    echo "$me: $*" >&2
    exit 1
}

while getopts ":hn" option; do
    case $option in
    h) usage ;;

    n) noop=1 ;;

    *) die "invalid option '$option'" ;;
    esac
done && shift $((OPTIND - 1))

(($# == 0)) && die "no files to rename"

temp_dir=$(mktemp -d -t "${me}.XXXXXXXXXX")
trap 'rm -rf "$temp_dir"' INT TERM EXIT

src_list=$temp_dir/src
dst_list=$temp_dir/dst

stest -e "$@" >"$src_list"
cp "$src_list" "$dst_list"

visual "$dst_list"

readarray -t src_lines <"$src_list"
readarray -t dst_lines <"$dst_list"

if ((${#src_lines[@]} != ${#dst_lines[@]})); then
    die "lines were added or removed"
fi

for ((i = 0; i <= ${#dst_lines[@]}; i += 1)); do
    src=${src_lines[$i]}
    dst=${dst_lines[$i]}

    [[ "$src" == "$dst" ]] && continue

    if [[ ! $noop ]]; then
        mkdir -p "$(dirname "$dst")"
        mv -i -T "$src" "$dst"
    fi

    echo "$dst"
done

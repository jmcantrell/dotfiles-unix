#!/usr/bin/env bash

set -eu

dir=${NODENV_ROOT:-$HOME/.nodenv}

if [[ -d $dir ]]; then
    cd "$dir"
    git pull origin master
else
    git clone https://github.com/nodenv/nodenv.git "$dir"
    cd "$dir"
fi

declare -A plugins

plugins["node-build"]=https://github.com/nodenv/node-build.git
plugins["nodenv-update"]=https://github.com/nodenv/nodenv-update.git
plugins["nodenv-default-packages"]=https://github.com/nodenv/nodenv-default-packages.git

for name in "${!plugins[@]}"; do
    plugin_dir=$dir/plugins/$name

    if [[ -d $plugin_dir ]]; then
        cd "$plugin_dir"
        git pull origin master
    else
        git clone "${plugins[$name]}" "$plugin_dir"
    fi
done

cat >"$dir"/default-packages <<-EOF
eslint
neovim
npm
npm-upgrade
prettier
EOF

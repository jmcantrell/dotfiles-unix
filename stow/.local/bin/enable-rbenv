#!/usr/bin/env bash

set -e

dir=${RBENV_ROOT:-$HOME/.rbenv}

if [[ -d $dir ]]; then
    cd "$dir"
    git pull origin master
else
    git clone https://github.com/rbenv/rbenv.git "$dir"
    cd "$dir"
fi

declare -A plugins

plugins[ruby-build]=https://github.com/rbenv/ruby-build.git
plugins[rbenv-update]=https://github.com/rkh/rbenv-update.git
plugins[rbenv-default-gems]=https://github.com/rbenv/rbenv-default-gems.git

for name in "${!plugins[@]}"; do
    plugin_dir=$dir/plugins/$name

    if [[ -d $plugin_dir ]]; then
        cd "$plugin_dir"
        git pull origin master
    else
        git clone "${plugins[$name]}" "$plugin_dir"
        cd "$plugin_dir"
    fi
done

cat >"$dir"/default-gems <<-EOF
bundler
neovim
rufo
solargraph
EOF

eval "$("$dir"/bin/rbenv init -)"

latest=$(
    rbenv install -l 2>/dev/null |
        grep -E '^\s*[0-9.]+$' |
        tail -n1 |
        sed 's/^[[:space:]]\+//;s/[[:space:]]\+$//'
)

if ! rbenv versions --bare | grep -q "^${latest}$"; then
    rbenv install "$latest"
fi

rbenv global "$latest"

#!/usr/bin/env bash

# List the submodules paths in this repository.

set -eu

submodules_config=$PWD/.gitmodules

if [[ ! -f $submodules_config ]]; then
    exit 0
fi

git config --file "$submodules_config" --name-only --get-regex "\.path$" | while read -r path_key; do
    git config --file "$submodules_config" --get "$path_key"
done

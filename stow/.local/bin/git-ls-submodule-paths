#!/usr/bin/env bash

# List the submodule paths in this repository.

set -eu

config_file=$PWD/.gitmodules

if [[ ! -f $config_file ]]; then
    exit 0
fi

git config --file "$config_file" --name-only --get-regex "\.path$" | while read -r path_key; do
    git config --file "$config_file" --get "$path_key"
done

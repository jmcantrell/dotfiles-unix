#!/usr/bin/env bash

set -e

# Make a directory and move the given files into it.
# If no files are given, it behaves exactly like mkdir -p.
# usage: mkmv dir [file...]

dir=${1:?no directory given}; shift

mkdir -p "$dir"

# if files were given, then move them to $dir
(( $# > 0 )) && [[ -d $dir ]] && mv -nv "$@" "$dir"

#!/usr/bin/env bash

set -e

src=${1:?first argument must be the item to post}
action=$2  # url, file, or shorten

if [[ ! $action ]]; then
    if [[ $src == http://* || $src == https://* ]]; then
        action="url"
    else
        action="file"
    fi
fi

exec curl -F "$action=$src" https://0x0.st

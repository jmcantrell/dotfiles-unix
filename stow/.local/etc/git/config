[core]
    excludesFile = ~/.local/etc/git/ignore

[include]
    path = ~/.local/etc/git/secret

[init]
    defaultBranch = master

[color]
    ui = auto
    branch = auto
    diff = auto
    interactive = auto
    status = auto

[pull]
    rebase = false

[push]
    default = current

[branch]
    autoSetupMerge = true

[diff]
    mnemonicPrefix = true
    submodule = log
    colorMoved = default

[difftool]
    prompt = false

[merge]
    tool = vimdiff

[mergetool]
    prompt = false

[web]
    browser = browser

[alias]
    ls = ls-files
    fix = mergetool
    amend = commit --amend

[advice]
    detachedHead = false

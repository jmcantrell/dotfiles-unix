ReadTags = yes

Repeat = no
Shuffle = no
AutoNext = yes

# Default FormatString:
#
#   %n - Track number
#   %a - Artist
#   %A - Album
#   %t - Title
#   %(X:TRUE:FALSE) - Ternary expression: if X exists, do TRUE,
#                     otherwise FALSE.  The escape character must
#                     be doubled (i.e., '\\').  (See zshmisc
#                     documentation for more information.)
#
FormatString = "%(n:%n :)%(t:%t:)%(a: by %a:)%(A: from %A:)"

ShowHiddenFiles = no

# Hide file name extensions?
HideFileExtension = no

# Show file format in menu?
ShowFormat = no

Theme = nightly_theme
AutoLoadLyrics = yes

Precache = yes

SavePlaylist = no
SyncPlaylist = yes

SeekTime = 1
SilentSeekTime = 5

PlaylistNumbering = no
FollowPlayedFile = yes
CanStartInPlaylist = yes

SetXtermTitle = yes
SetScreenTitle = yes

#PlaylistFullPaths = yes
OnSongChange = "notify-send 'now playing:' '%t by %a'"

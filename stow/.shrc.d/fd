alias fd='noglob fd'

# Include details with results (similar to `ls -l`).
alias fdl='fd --list-details'

# Include hidden files.
alias fda='fd --hidden'

# Include details and hidden files.
alias fdla='fd --list-details --hidden'

# Include details, hidden files, and ignored files.
alias fdlA='fd --list-details --hidden --no-ignore'

# vi:ft=sh

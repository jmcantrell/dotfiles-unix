transmission_done() {
    transmission-remote -l |
        awk '{print $1,$2}' |
        tail -n+2 | head -n-1 |
        grep '\b100%\b' |
        awk '{print $1}'
}

alias tx='transmission-remote'

# Remove finished downloads.
alias txc='tx -t "$(transmission_done | paste -sd,)" -r'

# List active downloads.
alias txl='tx -l | grep -vi queued'

# List all downloads.
alias txla='tx -l'

# vi:ft=sh

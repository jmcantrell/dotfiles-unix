alias v='editor'
alias gv='visual'
alias sv='sudo -e'
alias vin='editor-stdin'

# Edit a program in $PATH.
vw() {
    command which "$@" 2>/dev/null | editor-stdin
}

# Edit the stdout of a command.
vx() {
    "$@" | editor -
}

# Edit the std{out,err} of a command.
vX() {
    "$@" 2>&1 | editor -
}

# vi:ft=sh

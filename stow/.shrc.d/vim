alias v='editor'
alias gv='visual &'

# Edit files as root.
alias V='sudo -e'

# Edit files passed over standard input.
alias vin='editor-stdin'

# Edit program(s) in $PATH.
vw() {
    command which "$@" 2>/dev/null | editor-stdin
}

# Edit the output of a command.
vx() {
    "$@" | editor -
}

# Edit all output of a command.
vX() {
    "$@" 2>&1 | editor -
}

# vi:ft=sh

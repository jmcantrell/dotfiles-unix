# Set yanked files.
alias y='yank'

# Append to yanked files.
alias ya='yank -a'

# List yanked files.
alias yl='yank -l'

# Clear yanked files.
alias yc='yank -c'

# Run a command against yanked files.
yx() {
    yank -l | xargs -r -I{} "$@"
}

# Copy yanked files.
ycp() {
    yx cp -av {} "${1:-$PWD}"
}

# Move yanked files.
ymv() {
    yx mv -v {} "${1:-$PWD}"
    yank -c
}

# Remove yanked files.
yrm() {
    yx rm -irfv {}
    yank -c
}

# vi:ft=sh

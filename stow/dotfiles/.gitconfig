[core]
	excludesfile = ~/.gitignore.global

[color]
	branch = auto
	diff = auto
	interactive = auto
	status = auto

[pull]
	rebase = false

[push]
	default = simple

[submodule]
	recurse = true

[merge]
	tool = vimdiff

[diff]
	mnemonicprefix = true
	submodule = log

[difftool]
	prompt = false

[mergetool]
	prompt = false

[branch]
	autosetupmerge = true

[web]
	browser = vimb

[include]
	path = .gitconfig.local

[alias]
	ls = ls-files
	st = status
	cd = root
	ci = commit
	co = checkout
	fix = mergetool
	amend = commit --amend

[advice]
	detachedHead = false

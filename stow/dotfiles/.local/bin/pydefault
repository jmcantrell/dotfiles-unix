#!/usr/bin/env bash

# Add user symlinks to override default python version.
# Usage: pydefault [version]

version=${1:-3}
dir=$HOME/.local/bin

if ! which "python${version}" &>/dev/null; then
    echo "Version '$version' of python does not exist." >&2
    exit 1
fi

mkdir -p "$dir"

for bin in python pip pydoc idle; do
    ln -sfv "$(which "${bin}${version}")" "$dir/$bin"
done

ln -sfv "$(which "python${version}-config")" "$dir"/python-config

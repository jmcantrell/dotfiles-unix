#!/usr/bin/env bash

me=${0##*/}
usage="Bump version of a python package.
Usage: $me [-Mmbnh] [-v version]"

unset OPTIND
while getopts ":hifvqMmbnv:" option; do
    case $option in
        M) major=-M ;;
        m) minor=-m ;;
        b) build=-b ;;
        n) noop=1 ;;
        v) version_new=$OPTARG ;;
        h) echo "$usage" >&2 && exit 0 ;;
        *) echo "$usage" >&2 && exit 1 ;;
    esac
done && shift $(($OPTIND - 1))

setup=${1:-$PWD}/setup.py

[[ -f $setup ]] || exit 1

name=$(python "$setup" --name)
version=$(python "$setup" --version)

if [[ ! $version_new ]]; then
    default=$(semver $major $minor $build "$version")
    version_new=$(input -c -p "Enter version for '$name'" -d "$default")
fi

if [[ $version != ${version_new:-$version} ]]; then
    echo "$name: $version -> $version_new"
    sed "s/\(version[ \t]*=[ \t]*\)\(['\"]\+\).*\2/\1\2$version_new\2/" "$setup"
fi
